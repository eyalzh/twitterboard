name: TwitterBoard
main: org.samson.bukkit.plugins.twitterboard.TwitterBoardPlugin
description: Creates twitter boards.
version: ${project.version}

commands:
   twitterboard:
      description: TwitterBoard administration command.
      usage:|
        /<command> version - Get the plugin's version
        /<command> checkconfig - Check if the config is OK.
        /<command> tweet <msg> - Tweet a message using the account.
      permission: twitterboard.admin

permissions:
   twitterboard.admin:
      description: Allows you to run the TwitterBoard admin commands
      default: op
